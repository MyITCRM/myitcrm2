<h1>Listing replies</h1>

<table>
  <tr>
    <th>User</th>
    <th>Work order</th>
    <th>Content</th>
    <th>Private</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @replies.each do |reply| %>
  <tr>
    <td><%= reply.user_id %></td>
    <td><%= reply.work_order_id %></td>
    <td><%= reply.content %></td>
    <td><%= reply.private %></td>
    <td><%= link_to 'Show', reply %></td>
    <td><%= link_to 'Edit', edit_reply_path(reply) %></td>
    <td><%= link_to 'Destroy', reply, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

